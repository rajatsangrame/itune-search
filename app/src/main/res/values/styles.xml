<resources>
    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="AppTheme.Bold" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="AppTheme.Regular" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>


    <style name="TextViewStyleBold" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyleRegular" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextStyleRegular" parent="android:Widget.EditText">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>